# =======================================
#            PACMAN/SNAPSHOTS                    
# =======================================
alias asp="$HOME/.local/bin/arch_snapshot"
alias add='sudo $HOME/.local/bin/snap-pac'
alias up='sudo $HOME/.local/bin/arch_update_snapshot '
alias pkg='pacman -Ss'
alias rs="sudo $HOME/.local/bin/remove_snapshot"
alias del='sudo pacman -Rns'
alias cache='ls /var/cache/pacman/pkg | wc -l && du -sh /var/cache/pacman/pkg'
alias plog='cat /var/log/pacman.log | grep "installed\|upgraded" | less'

# =======================================
#               SYSTEMD                    
# =======================================
